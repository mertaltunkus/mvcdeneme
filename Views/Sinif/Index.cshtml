@model IEnumerable<MVCdeneme2.Models.EntityFramework.Sinif>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>

}
<h2>Sınıflar</h2>
<p>
    @Html.ActionLink("Yeni Sınıf Oluştur", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { onclick = "return confirm('" + item.Ad.ToString() + " sınıfını silmek istediğinize emin misiniz? Sınıfta bulunan tüm öğrenciler ve notları silinecektir.');" })
            </td>
        </tr>
    }

</table>

