@model MVCdeneme2.Models.EntityFramework.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    
    <div class="container">
        <h2>Not girmek için giriş yapmalısınız</h2>
        @ViewBag.Message
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Ad)
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Sifre)
                @Html.PasswordFor(x => x.Sifre, new { @class = "form-control", placeholder = "Parola" })
            </div>
            <button type="submit" class="btn btn-block btn-success">Giriş Yap</button>
        }
    <div>
        @Html.ActionLink("Geri Dön", "Index", "Ogrenci")
    </div>

    </div>

</body>
</html>
