@model MVCdeneme2.ViewModels.NavbarVM

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Okulum</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Ogrenci">Öğrenciler</a>
            </li>
            <li class="nav-item dropdown bg-dark">
                <a class="nav-link dropdown-toggle" href="/Ders" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dersler
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/Ders">Tüm Dersler</a>
                    <div class="dropdown-divider"></div>
                    @foreach (var item in Model.Dersler)
                    {
                        <a class="dropdown-item" href="/Ders/Tekders/@item.Id">@item.Ad</a>
                    }
                </div>
            </li>
            <li class="nav-item dropdown bg-dark">
                <a class="nav-link dropdown-toggle" href="/Sinif" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sınıflar
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/Sinif">Tüm Sınıflar</a>
                    <div class="dropdown-divider"></div>
                    @foreach (var item in Model.Siniflar)
                    {
                        <a class="dropdown-item" href="/Sinif/TekSinif/@item.Id">@item.Ad</a>
                    }
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/OgrenciDers">Not Gir</a>
            </li>
            @{bool val = (System.Web.HttpContext.Current.User != null) && System.Web.HttpContext.Current.User.Identity.IsAuthenticated;}
            @if (val)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Security/Logout">Çıkış yap</a>
                </li>
            }
        </ul>
        <form class="form-inline my-2 my-lg-0">
            @if (val)
            {
                <a class="nav-item " style="color:white">İyi günler, @Model.username</a>
            }
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
